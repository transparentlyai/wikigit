# WikiGit Configuration File
# Copy this to ../config.yaml (project root) and customize for your deployment

# Application settings
app:
  app_name: WikiGit
  admins:
    - admin@example.com
    - editor@example.com
  # Optional: Configure home page
  # home_page_repository: owner/repo-name
  # home_page_article: Home.md

# Search settings
search:
  index_dir: ./data/search-index

# Multi-repository settings
multi_repository:
  enabled: true
  repositories_root_dir: ./wiki-repositories
  auto_sync_interval_minutes: 15
  author_name: WikiGit Bot
  author_email: bot@wikigit.app
  default_branch: main

  # GitHub integration (optional, for private repos)
  github:
    token_env_var: GITHUB_TOKEN
    user_id: your-github-username

  # Repositories are managed via API and stored in:
  # {repositories_root_dir}/config/repositories.json
