# WikiGit Configuration File
# Copy this to config.yaml and customize for your deployment

# Application settings
app:
  app_name: WikiGit
  admins:
    - admin@example.com
    - editor@example.com

# Search settings
search:
  index_dir: /home/mauro/projects/wikigit/data/search-index

# Multi-repository settings
# WikiGit now uses multi-repository mode exclusively
multi_repository:
  enabled: true

  # Directory where all repository clones will be stored
  repositories_root_dir: /home/mauro/projects/wikigit/wiki-repositories

  # Auto-sync interval in minutes (pulls remote changes, pushes local changes)
  auto_sync_interval_minutes: 15

  # Git commit author settings
  author_name: WikiGit Bot
  author_email: bot@wikigit.app

  # Default branch for new repositories
  default_branch: main

  # GitHub integration settings (optional, required for cloning/syncing private repos)
  github:
    # Environment variable name containing your GitHub Personal Access Token (PAT)
    # Create a PAT at: https://github.com/settings/tokens
    # Required scopes: repo (for private repos) or public_repo (for public repos only)
    token_env_var: GITHUB_TOKEN

    # Your GitHub username
    user_id: ""  # Example: "octocat"

  # Repository Management:
  # Repositories are managed via the RepositoryService and stored in:
  #   {repositories_root_dir}/config/repositories.json
  # Use the admin API endpoints to add/remove/configure repositories.
  # Do NOT manually edit repositories.json - use the API instead.
